---
import { Image } from 'astro:assets'
import type { ImageMetadata } from 'astro'

import airtable from '../../assets/logos/airtable-logo.svg'
import asana from '../../assets/logos/asana-logo.svg'
import basecamp from '../../assets/logos/basecamp-logo.svg'
import evernote from '../../assets/logos/evernote-logo.svg'
import notion from '../../assets/logos/notion-logo.svg'
import slack from '../../assets/logos/slack-logo.svg'

type LogoItem = {
	image: ImageMetadata
	alt: string
}

type Props = {
	title?: string
	logos?: LogoItem[]
	compact?: boolean
}

const defaultLogos: LogoItem[] = [
	{ image: airtable, alt: 'Airtable logo' },
	{ image: asana, alt: 'Asana logo' },
	{ image: basecamp, alt: 'Basecamp logo' },
	{ image: evernote, alt: 'Evernote logo' },
	{ image: notion, alt: 'Notion logo' },
	{ image: slack, alt: 'Slack logo' }
]

const { title = 'Trusted by D2C Brands', logos = defaultLogos, compact = true } = Astro.props
---

<section class:list={['simple-lead-logo-strip', { 'simple-lead-logo-strip--compact': compact }]} aria-label="Kundenlogos">
	<div class="simple-lead-logo-strip__inner">
		<p class="simple-lead-logo-strip__title">{title}</p>
		<div class="simple-lead-logo-strip__grid">
			{
				logos.map((logo) => (
					<div class="simple-lead-logo-strip__item">
						<Image src={logo.image} alt={logo.alt} loading="lazy" decoding="async" />
					</div>
				))
			}
		</div>
	</div>
</section>

<style>
	.simple-lead-logo-strip {
		@apply py-4;
	}

	.simple-lead-logo-strip--compact {
		@apply py-3;
	}

	.simple-lead-logo-strip__inner {
		@apply mx-auto w-full max-w-7xl px-4 sm:px-6;
	}

	.simple-lead-logo-strip__title {
		@apply mb-4 text-[0.72rem] font-semibold uppercase tracking-[0.14em] text-neutral-500;
	}

	.simple-lead-logo-strip__grid {
		@apply flex flex-wrap items-center gap-x-12 gap-y-6 sm:gap-x-16;
	}

	.simple-lead-logo-strip__item {
		@apply inline-flex items-center justify-center;
	}

	.simple-lead-logo-strip__item :global(img) {
		height: 40px;
		width: auto;
		opacity: 0.94;
		filter: grayscale(0.5);
		transition: opacity 180ms ease, filter 180ms ease;
	}

	.simple-lead-logo-strip__item :global(img):hover {
		opacity: 1;
		filter: grayscale(0);
	}

	@media (max-width: 640px) {
		.simple-lead-logo-strip__title {
			@apply text-[0.68rem];
		}

		.simple-lead-logo-strip__item :global(img) {
			height: 32px;
		}
	}
</style>
