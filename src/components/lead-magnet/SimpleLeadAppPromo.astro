---
import { Image } from 'astro:assets'
import type { ImageMetadata } from 'astro'

import defaultImage from '../../assets/postpal-app.png'

type Props = {
	title?: string
	description?: string
	ctaLabel?: string
	ctaHref?: string
	image?: ImageMetadata
	imageAlt?: string
}

const {
	title = 'Mehr Wiederkäufe mit der PostPal App.',
	description = 'Plane, steuere und analysiere deine CRM Print-Mailing-Kampagnen in einer Plattform - von Segmentierung über Aussteuerung bis Performance-Tracking.',
	ctaLabel = 'Jetzt kostenlos starten',
	ctaHref = 'https://app.getpostpal.com/register/wiederkaeufer-report',
	image = defaultImage,
	imageAlt = 'PostPal App Vorschau'
} = Astro.props
---

<section class="simple-lead-app-promo" aria-label="PostPal App">
	<div class="simple-lead-app-promo__inner">
		<div class="simple-lead-app-promo__copy">
			<h2>{title}</h2>
			<p>{description}</p>
			<a href={ctaHref} data-track-app-signup>{ctaLabel}</a>
		</div>

		<div class="simple-lead-app-promo__media">
			<Image
				src={image}
				alt={imageAlt}
				widths={[480, 720, 960, 1200]}
				sizes="(min-width: 1024px) 44vw, 92vw"
				loading="lazy"
				decoding="async"
				class="simple-lead-app-promo__image"
			/>
		</div>
	</div>
</section>

<style>
	.simple-lead-app-promo {
		@apply py-6;
		background:
			radial-gradient(120% 140% at 10% -10%, rgba(249, 146, 29, 0.12) 0%, rgba(249, 146, 29, 0) 45%),
			radial-gradient(130% 120% at 90% -10%, rgba(0, 107, 91, 0.14) 0%, rgba(0, 107, 91, 0) 42%),
			#f8f9f9;
	}

	.simple-lead-app-promo__inner {
		@apply mx-auto grid w-full max-w-7xl items-center gap-8 px-4 sm:px-6 lg:grid-cols-[1fr_1.02fr] lg:gap-12;
	}

	.simple-lead-app-promo__copy h2 {
		@apply mb-3 text-4xl font-bold leading-tight text-neutral-900 lg:text-5xl;
		font-family: 'Outfit Variable', 'Roboto', sans-serif;
	}

	.simple-lead-app-promo__copy p {
		@apply mb-6 max-w-2xl text-lg leading-relaxed text-neutral-600;
	}

	.simple-lead-app-promo__copy a {
		@apply inline-flex min-h-[52px] items-center justify-center rounded-xl bg-neutral-900 px-6 text-base font-semibold text-white transition hover:bg-neutral-800 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-primary-500;
	}

	.simple-lead-app-promo__media {
		@apply w-full;
	}

	.simple-lead-app-promo__image {
		@apply h-auto w-full rounded-2xl border border-neutral-200/60 object-contain;
	}

	@media (max-width: 640px) {
		.simple-lead-app-promo {
			@apply py-4;
		}

		.simple-lead-app-promo__copy h2 {
			@apply text-3xl;
		}

		.simple-lead-app-promo__copy p {
			@apply text-base;
		}

		.simple-lead-app-promo__copy a {
			@apply w-full;
		}
	}
</style>
