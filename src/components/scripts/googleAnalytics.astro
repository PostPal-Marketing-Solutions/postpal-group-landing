---
// Google Analytics tracking script
import { googleAnalyticsMeasurementID } from '../../../src/config/analytics.ts'
---

<script is:inline async src={`https://www.googletagmanager.com/gtag/js?id=${googleAnalyticsMeasurementID}`}></script>

<script is:inline define:vars={{ googleAnalyticsMeasurementID }}>
	window.dataLayer = window.dataLayer || []
	function gtag() {
		dataLayer.push(arguments) // eslint-disable-line
	}
	gtag('js', new Date())
	gtag('config', googleAnalyticsMeasurementID)
</script>
