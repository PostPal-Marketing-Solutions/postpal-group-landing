---
// Home page CTA Section
// ------------
// Description: A centered call to action section that contains: a title, text, a user review snippet, a button and a image.

// Components
// - Layout
import Section from '../../ui/Section.astro'
import Row from '../../ui/Row.astro'
import Col from '../../ui/Col.astro'
// - UI
import ChipNotification from '../../ui/ChipNotification.astro'
import Button from '../../ui/Button.astro'
import { Image } from 'astro:assets'

// Content
import heroImage from '../../../assets/postpal-app.png'
---

<Section id="intro" padding="both" classes="hero">
	<Row classes="items-center">
		<Col span="12" align="center" classes="text-center">
			<ChipNotification
				radius="rounded-full"
				classes="hero__pill animate-fadeUp [animation-delay:50ms]"
			>
				PostPal Group
			</ChipNotification>
			<h1 class="hero__title animate-fadeUp [animation-delay:150ms]">
				Experten f√ºr <span class="text-primary-600 dark:text-primary-200">Direct Mail</span>
				<span class="block"
					>&amp; <span class="text-accent-800 dark:text-accent-300">Print Marketing</span></span
				>
			</h1>
			<p class="hero__subtitle animate-fadeUp [animation-delay:250ms]">
				Strategie, Print und Versand aus einer Hand - damit Direct-Mail-Kampagnen messbar wirken.
			</p>
			<div class="hero__actions animate-fadeUp [animation-delay:350ms]">
				<Button size="base" link="https://calendly.com/postpal-felix/postpal-kennenlernen">
					Kontaktiere uns
				</Button>
				<Button size="base" style="secondary" link="https://www.getpostpal.com/">
					PostPal App entdecken
				</Button>
			</div>
		</Col>
		<Col span="12" align="center" classes="mt-10">
			<div class="hero__media animate-fadeUp [animation-delay:450ms]">
				<Image
					src={heroImage}
					alt="PostPal App"
					width={1200}
					height={749}
					widths={[480, 640, 768, 960, 1200]}
					sizes="(min-width: 1280px) 960px, (min-width: 1024px) 860px, 92vw"
					class="hero__image"
					loading="eager"
					decoding="async"
					fetchpriority="high"
				/>
			</div>
		</Col>
	</Row>
</Section>

<style>
	.hero {
		--hero-bg: radial-gradient(120% 120% at 50% -10%, #fff4e9 0%, #ffffff 45%, #e6f1ef 100%);
		@apply flex min-h-[70vh] items-center;
		background: var(--hero-bg);
	}
	:global(.dark) .hero {
		--hero-bg: radial-gradient(120% 120% at 50% -10%, #0b3f35 0%, #00201b 55%, #0d1011 100%);
	}
	.hero__pill {
		@apply mb-12 border border-neutral-200/80 bg-white/70 text-neutral-700 backdrop-blur dark:border-white/10 dark:bg-white/10 dark:text-white/90;
	}
	.hero__title {
		@apply pt-4 text-4xl font-bold leading-tight tracking-tight text-neutral-900 sm:text-5xl lg:text-6xl dark:text-white;
	}
	.hero__subtitle {
		@apply mx-auto mt-4 max-w-2xl text-lg text-neutral-600 dark:text-neutral-200;
	}
	.hero__actions {
		@apply mt-8 flex flex-col items-center justify-center gap-4 sm:flex-row;
	}
	.hero__media {
		@apply mx-auto w-full max-w-5xl overflow-hidden rounded-3xl border border-neutral-200/70 bg-white/70 p-2 shadow-2xl shadow-neutral-900/10 backdrop-blur dark:border-white/10 dark:bg-white/5 dark:shadow-black/40;
	}
	.hero__image {
		@apply h-auto w-full rounded-2xl object-contain;
	}
</style>
